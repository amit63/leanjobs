<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_admin_applicant_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.leanjobs.Admin_applicant_details">

    <Button
        android:id="@+id/BtnReject"
        android:layout_width="188dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="450dp"
        android:layout_marginEnd="12dp"
        android:background="@color/black"
        android:text="Reject"
        android:textColor="@color/white" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/JobTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:text="Job title"
                android:textSize="@dimen/text_size_large" />

            <TextView
                android:id="@+id/AdminJobStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:text="Status"
                android:textSize="@dimen/text_size_large" />

            <TextView
                android:id="@+id/ApplicantName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/JobTitle"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="Applicant Name:"
                android:textSize="@dimen/text_size_medium" />

            <TextView
                android:id="@+id/applname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ApplicantName"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:text="name" />


            <TextView
                android:id="@+id/Applemail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ApplicantName"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="44dp"
                android:text="Applicant Email ID:"
                android:textSize="@dimen/text_size_medium" />

            <TextView
                android:id="@+id/emailid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Applemail"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:text="Email ID" />

            <TextView
                android:id="@+id/Applphone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/emailid"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="Applicant Phone:"
                android:textSize="@dimen/text_size_medium" />

            <TextView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Applphone"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:text="Phone" />

            <TextView
                android:id="@+id/Applstatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/phone"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="Application Status:"
                android:textSize="@dimen/text_size_medium" />

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Applstatus"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:text="Status" />

            <Button
                android:id="@+id/btnChangeStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/status"
                android:layout_marginTop="127dp"
                android:background="@color/black"
                android:text="Shortlist"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnApplresume"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/status"
                android:layout_marginTop="45dp"
                android:background="@color/black"
                android:text="View Applicant Resume"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnAccept"
                android:layout_width="188dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/btnChangeStatus"
                android:layout_alignParentTop="true"
                android:layout_marginStart="9dp"
                android:layout_marginTop="450dp"
                android:background="@color/black"
                android:text="Accept"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/txtMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/status"
                android:layout_alignParentStart="true"
                android:layout_marginStart="204dp"
                android:layout_marginTop="136dp"
                android:textSize="24sp" />

            <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:id="@+id/AdminChangeJobStatus"-->
            <!--android:layout_below="@+id/AdminCloseRequisition"-->
            <!--android:layout_marginTop="20dp"-->
            <!--android:text="Change Status"/>-->


        </RelativeLayout>
    </ScrollView>
</RelativeLayout>